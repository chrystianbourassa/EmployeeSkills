@model SubCategory

@{ ViewData["Title"] = "Détails sur une sous-catégorie de compétence"; }

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Détail pour @Model.Description  </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="SubCategoryID" class="control-label"></label>
                    <input asp-for="SubCategoryID" class="form-control" readonly />
                    <span asp-validation-for="SubCategoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.Description" class="control-label"></label>
                    <input asp-for="Category.Description" class="form-control" />
                    <span asp-validation-for="Category.Description" class="text-danger"></span>
                </div>


                <div class="form-group">

                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.SubCategoryID">Editer</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Annuler</a>
                </div>
            </div>
        </div>
    </div>
</div>

