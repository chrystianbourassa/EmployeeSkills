@model IEnumerable<Employee>

@{ ViewData["Title"] = "Liste des employés"; }

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-left">
                    @*<th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>*@
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.HireDate)</th>
                    <th>@Html.DisplayNameFor(model => model.HomePhone)</th>
                    <th>@Html.DisplayNameFor(model => model.City.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        @*<td class="align-middle">
                <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
            </td>*@
        <td class="align-left">
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td class="align-left">
            @Html.DisplayFor(modelItem => item.HireDate)
        </td>

        <td class="align-left">
            @Html.DisplayFor(modelItem => item.HomePhone)
        </td>

        <td class="align-left">
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>


        <td class="align-left">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.EmployeeID"><i class="bi bi-pencil-square"></i>Edit </a> |
            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.EmployeeID"><i class="bi bi-eye"></i>Details </a> |
            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.EmployeeID"><i class="bi bi-trash"></i>Delete </a>
        </td>

    </tr>}
            </tbody>

        </table>
    </div>
</div>
<div style="position:fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Employees" asp-action="CreateNew" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Ajouter
    </a>
</div>