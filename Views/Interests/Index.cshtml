@model IEnumerable<Interest>

@{ ViewData["Title"] = "Liste des catégorie de compétences"; }
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Gestion des niveaux d'intérêt</h1>
        </p>


        <table class="table">
            <thead>
                <tr class="text-left">
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-left">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-left">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.InterestID"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.InterestID"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.InterestID"><i class="bi bi-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<div style="position:fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="interests" asp-action="CreateNew" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Ajouter
    </a>
</div>
